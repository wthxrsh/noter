<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Noter</title>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input  type="text" class="block w-full rounded-md outline-none bg-zinc-800 px-5 py-2" placeholder="Title goes here" name="title">
                <textarea class="block w-full rounded-md outline-none px-5 mt-2 bg-zinc-800 py-2 resize-none" placeholder="Write your task here" id="" name="details"></textarea>
                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="create task">
            </form>
        </div>
        <div name="tasks" class="flex gap-3 flex-wrap p-10">
            <% if(files.length > 0){ %>
                <% files.forEach(function(val){ %>
                    <div class="task min-w-72 px-3 py-4 rounded-md bg-zinc-800">
                        <h1 name="eachTitle" value="<%= val %>" class="text-white text-3xl tracking-tighter"><%= val %></h1>
                        <div class="justify-between flex mt-3">
                        <a class="text-blue-500 inline-block" href="/file/<%=val%>">Read more</a>
                        <a class="text-blue-500 inline-block" href="/edit/<%= val %>">edit</a>
                        <a method="get" href="/delete?title=<%= val %>" class="text-blue-500 inline-block" name="delete">delete file</a>
                        </div>
                        
                    </div>
                <% }) %>
                <% } else { %>
                    <h3 class="text-zinc-600">No tasks yet.</h3>
                <% } %>
        </div>
    </div>
</body>
</html>